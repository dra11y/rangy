{
  "extends": "../tsconfig.package.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "baseUrl": "./",
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@rangy/core": ["../core/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"],
  "references": [{ "path": "../core" }]
}
