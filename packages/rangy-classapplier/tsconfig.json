{
  "extends": "../tsconfig.package.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/build",
    "declarationDir": "./dist/types",
    "baseUrl": "./",
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@dra11y/rangy-core": [
        "../rangy-core/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ],
  "references": [
    {
      "path": "../rangy-core"
    }
  ]
}
